<head>
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</head>


<h1>Catalog of books</h1>
<hr />
@if (Model.Count != 0)
{
  <ul>
    @foreach (var book in Model)
    {
      <li><a href='/books/@book.GetId()'>@book.GetBook()</a> | <a href="/catalog" class="deleteAction" id="@book.GetId()">Delete</a></li>
    }
  </ul>
}

<h4><a href="/addbook">Add another book</a></h4>
<form id="secret-form" action="/book/delete" method="post">
  <input type="hidden" name="bookId" value="">
</form>

<script type="text/javascript">
  $("#secret-form").hide();
  $(document).ready(function() {
    $("a.deleteAction").click(function(event) {
      event.preventDefault();
      $("form#secret-form input").val(this.id);
      $("form#secret-form").submit();
    })
  })
</script>
