<h1>Search for authors</h1>
<hr />
<form  action="/authors/search" method="post">
  <label for="start">Author starts with:</label>
  <input type="text" name="start" required>
  <button type="submit" name="button">Search</button>
</form>


@if (Model.Count != 0)
{
  <ul>
    @foreach (var author in Model)
    {
      <li>@author.GetAuthor()</li>
    }
  </ul>
}
<h4><a href="/">Return home</a></h4>
